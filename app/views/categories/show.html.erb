<h1><%= @title%></h1>
<%if @posts.each do |post| %>
	<div class="post">
			<h3>
				<%= link_to post.title,post_path(:id =>post.id)%>
			</h3>
			<p> <%= post.body %></p>
	</div>
		<% end.empty? %>
		<div class="post">
			<p>Sorry,there are no posts in this category </p>
		</div>
	<% end %>
<%= link_to "Back to Categories", categories_path%>