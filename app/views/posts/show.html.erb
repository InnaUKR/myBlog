<div class="post">
	<h3><%= @post.title%></h3>
	<p><%= @post.body %></p>
	<p>Category: <%= link_to @post.category.name, category_path(@post.category) %></p>
	<p><%=link_to "Delete", @post,:confirm=>"Are you sure you wont to delete? ", method: :delete%>|
	<%=link_to "Edit", edit_post_path(@post)%>
	</p>
</div>